<%# --------------------------------------------------------------------------- %>
<%# TASK FORM PARTIAL                                                         %>
<%# This form is used for creating and editing tasks that belong to a project %>
<%# It uses the nested model route: /projects/:project_id/tasks/...           %>
<%# --------------------------------------------------------------------------- %>

<%= form_with(model: [@project, task], local: true) do |form| %>
  
  <%# --------------------------- Error Display ---------------------------- %>
  <% if task.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h4>
      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# ----------------------------- Title ---------------------------------- %>
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <%# --------------------------- Due Date --------------------------------- %>
  <div class="mb-3">
    <%= form.label :due_date, class: "form-label" %>
    <%= form.date_field :due_date, class: "form-control" %>
  </div>

  <%# --------------------------- Priority --------------------------------- %>
  <%# Dropdown that maps enum keys (:low, :medium, :high) to readable text %>
  <div class="mb-3">
    <%= form.label :priority, class: "form-label" %>
    <%= form.select :priority, Task.priorities.keys.map { |p| [p.humanize, p] },
                    {}, class: "form-select" %>
  </div>

  <%# ---------------------------- Status ---------------------------------- %>
  <%# Dropdown for task status; user can select between all enum values %>
  <div class="mb-3">
    <%= form.label :status, class: "form-label" %>
    <%= form.select :status, Task.statuses.keys.map { |s| [s.humanize, s] },
                    {}, class: "form-select" %>
  </div>

  <%# ---------------------------- Submit ---------------------------------- %>
  <div class="mt-3">
    <%= form.submit class: "btn btn-primary" %>
  </div>

<% end %>
