<div class="card h-100 shadow-sm border-<%= task.status == 'done' ? 'success' : task.status == 'in_progress' ? 'warning' : 'secondary' %>">
  <div class="card-body d-flex flex-column">
    <h5 class="card-title"><%= task.title %></h5>
    <p class="card-text flex-grow-1">
      <small>Priority: 
        <%= content_tag :span, task.priority.humanize, class: "badge bg-#{task.priority == 'high' ? 'danger' : task.priority == 'medium' ? 'primary' : 'light text-dark'}" %>
      </small>
    </p>
    <p class="card-text">
      Status: 
      <%= content_tag :span, task.status.humanize, class: "badge bg-#{task.status == 'done' ? 'success' : task.status == 'in_progress' ? 'warning' : 'secondary'}" %>
    </p>
    <p class="card-text">
      <small class="text-muted">Due: <%= task.due_date.strftime("%B %d, %Y") if task.due_date %></small>
    </p>
    
    <div class="mt-2">
      <%= link_to "View", [project, task], class: "btn btn-sm btn-outline-primary" %>
      <%= link_to "Edit", edit_project_task_path(project, task), class: "btn btn-sm btn-outline-secondary" %>
    </div>
  </div>
</div>
